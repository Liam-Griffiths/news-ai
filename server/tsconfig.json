{
    // Basic Settings
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2017"],
        "rootDir": "./",
        "target": "es2017",
        "sourceMap": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
